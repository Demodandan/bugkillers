<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bugkillers.back.bean.userMapper">
    
	<insert id="addUser" parameterType="org.bugkillers.back.bean.User">
		insert into user (id,name,age) values(#{id},#{name},#{age})
	</insert>
	
	<delete id="deleteUser" parameterType="int">
		delete from user where id = #{id}
	</delete>

	<update id="updateUser" parameterType="org.bugkillers.back.bean.User">
		update user set name = #{name} , age = #{age} where id = #{id}
	</update>

	<select id="getUser" parameterType="int"
		resultType="org.bugkillers.back.bean.User">
		select * from user where id=#{id}
	</select>
	
	<select id="getAllUsers" resultType="org.bugkillers.back.bean.User">
		select * from user
	</select>
</mapper>